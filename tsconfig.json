{
	"compilerOptions": {
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"jsx": "preserve",
		"lib": ["es6", "es7", "dom"],
		"moduleResolution": "node",
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es6"
	},
	"exclude": ["node_modules"]
}
